      }

      .btn-success:hover {
          background-color: #0bd53b;
      }

      #preview
      {
          width:21cm;
          height:29.7cm;
          background: white;
          box-shadow: 0px 10px 15px -3px rgba(0,0,0,0.6);
      }

      #help
