      }

      .pull-right{
          position: relative;
          text-align: right;
      }

      .no-highlight{
          opacity: .3;
      }

      .highlight{
          opacity: 1;
      }

      .no-hold-highlight{
          opacity: .3;
      }

      .hold-highlight{
          opacity: 1;
      }

      .container-verif-integrite{
          padding: 10px;
          background: #f1f1f1;
          border: 2px solid #ccc;
      }

      .btn-verifier-integrite-page{
          width: 100%;
          cursor: pointer;
          background-color: #642a82;
          color: white;
          padding: 7px 10px;
          margin: 8px 0;
          border: none;
          border-radius: 4px;
      }

      .btn-verifier-integrite-page:hover{
