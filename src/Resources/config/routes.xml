        <default key="_controller">imanaging_conception_document.conception_document_controller::saveBlocPosition</default>
    </route>

    <route id="conception_document_conception_tool_bloc_load_edition" path="/conception/bloc/{id}/entity/{entityId}/load-edition">
        <default key="_controller">imanaging_conception_document.conception_document_controller::loadBlocEdition</default>
