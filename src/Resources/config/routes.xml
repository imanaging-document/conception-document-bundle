        <default key="_controller">imanaging_conception_document.conception_document_controller::gestionDesBlocs</default>
    </route>

    <route id="conception_document_conception_tool_bloc_add" path="/conception/page/{pageId}/entity/{entityId}/bloc/add">
        <default key="_controller">imanaging_conception_document.conception_document_controller::addBloc</default>
    </route>

    <route id="conception_document_conception_tool_bloc_remove" path="/conception/page/{pageId}/entity/{entityId}/bloc/{blocId}/remove">
        <default key="_controller">imanaging_conception_document.conception_document_controller::removeBloc</default>
    </route>

    <route id="conception_document_conception_tool_bloc_duplicate" path="/conception/page/{pageId}/entity/{entityId}/bloc/{blocId}/duplicate">
        <default key="_controller">imanaging_conception_document.conception_document_controller::duplicateBloc</default>
    </route>

    <route id="conception_document_conception_tool_save_blocs_order" path="/conception/page/{pageId}/save-blocs-order">
        <default key="_controller">imanaging_conception_document.conception_document_controller::saveBlocsOrder</default>
    </route>

