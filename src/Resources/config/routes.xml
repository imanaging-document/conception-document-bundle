    </route>

    <route id="conception_document_conception_tool_bloc_save_style" path="/conception/bloc/save-style">
        <default key="_controller">imanaging_conception_document.conception_document_controller::saveBlocStyle</default>
    </route>

    <route id="conception_document_conception_tool_save_multi_blocs" path="/conception/save-multi-blocs">
        <default key="_controller">imanaging_conception_document.conception_document_controller::saveMultiBlocs</default>
    </route>

    <route id="conception_document_conception_tool_bloc_add_condition" path="/conception/bloc/{id}/entity/{entityId}/add-condition">
        <default key="_controller">imanaging_conception_document.conception_document_controller::addConditionToBloc</default>
    </route>

    <route id="conception_document_conception_tool_page_add_condition" path="/conception/page/{id}/entity/{entityId}/add-condition">
        <default key="_controller">imanaging_conception_document.conception_document_controller::addConditionToPage</default>
    </route>

    <route id="conception_document_conception_tool_remove_condition" path="/conception/condition/{id}/entity/{entityId}/remove">
        <default key="_controller">imanaging_conception_document.conception_document_controller::removeCondition</default>
    </route>

    <route id="conception_document_conception_tool_check_page_integrity" path="/conception/page/{id}/integrity/check">
        <default key="_controller">imanaging_conception_document.conception_document_controller::checkPageIntegrity</default>
    </route>

    <route id="conception_document_conception_tool_generate_pdf" path="/conception/{id}/entity/{entityId}/generate-pdf">
        <default key="_controller">imanaging_conception_document.conception_document_controller::generatePdf</default>
    </route>
</routes>
