<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="conception_document" path="/conceptions">
        <default key="_controller">imanaging_conception_document.conception_document_controller::index</default>
    </route>

    <route id="conception_document_add" path="/conceptions/new">
        <default key="_controller">imanaging_conception_document.conception_document_controller::add</default>
    </route>

    <route id="conception_document_remove" path="/conception/{id}/remove">
        <default key="_controller">imanaging_conception_document.conception_document_controller::remove</default>
    </route>

    <route id="conception_document_upload_yaml" path="/conception/{id}/upload-yaml">
        <default key="_controller">imanaging_conception_document.conception_document_controller::uploadYaml</default>
    </route>

    <route id="conception_document_show_import_modal" path="/conception/{id}/show-import-modal">
        <default key="_controller">imanaging_conception_document.conception_document_controller::showImportModal</default>
    </route>

    <route id="conception_document_import_yaml" path="/conception/{id}/import-yaml">
        <default key="_controller">imanaging_conception_document.conception_document_controller::importYaml</default>
    </route>

    <route id="conception_document_select_entity" path="/conception/{id}/select-entity">
        <default key="_controller">imanaging_conception_document.conception_document_controller::selectEntity</default>
    </route>

    <route id="conception_document_show_search_entity_form" path="/conception/{id}/show-search-entity-form">
        <default key="_controller">imanaging_conception_document.conception_document_controller::showSearchEntityForm</default>
    </route>

    <route id="conception_document_validate_entity_selection" path="/conception/{id}/validate-entity-selection">
        <default key="_controller">imanaging_conception_document.conception_document_controller::validateEntitySelection</default>
    </route>

    <route id="conception_document_conception_tool" path="/conception/{id}/entity/{entityId}/page/{pageNumber}/conception-tool">
        <default key="_controller">imanaging_conception_document.conception_document_controller::conceptionTool</default>
    </route>

    <route id="conception_document_conception_tool_add_page" path="/conception/{id}/entity/{entityId}/add-page">
        <default key="_controller">imanaging_conception_document.conception_document_controller::addPage</default>
    </route>

    <route id="conception_document_conception_tool_remove_page" path="/conception/entity/{entityId}/page/{id}/remove">
        <default key="_controller">imanaging_conception_document.conception_document_controller::removePage</default>
    </route>

    <route id="conception_document_conception_tool_page_preview" path="/conception/{id}/entity/{entityId}/page/{pageNumber}/preview">
        <default key="_controller">imanaging_conception_document.conception_document_controller::pagePreview</default>
    </route>

